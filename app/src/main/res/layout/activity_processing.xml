<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"

    tools:context=".Processing">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="2dp">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/balsamiq_sans"
            android:gravity="center"
            android:text="@string/text_view_of_processing_activity"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/inputImage"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_border"
            android:padding="2dp">

        </ImageView>

        <ImageView
            android:id="@+id/outputImage"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/processing_border"
            android:padding="2dp">

        </ImageView>

        <Button
            android:id="@+id/save_to_firebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF0033"
            android:text="@string/save_to_firebase">

        </Button>


    </LinearLayout>


</RelativeLayout>